{
  "name": "richard8768/hyperf-passport",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "php",
    "hyperf",
    "oauth",
    "oauth2",
    "passport"
  ],
  "description": "Hyperf Passport provides OAuth2 server support to Hyperf",
  "authors": [
    {
      "name": "richard8768",
      "email": "jobsen123@qq.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Richard\\HyperfPassport\\": "src/"
    },
    "files": [
      "src/helper.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "HyperfTest\\": "tests"
    }
  },
  "require": {
    "php": ">=8.1",
    "ext-json": "*",
    "96qbhy/hyperf-auth": "^3.1",
    "firebase/php-jwt": "^6.0",
    "guzzlehttp/guzzle": "^6.0|^7.0",
    "hyperf/command": "^3.1",
    "hyperf/contract": "^3.1",
    "hyperf/database": "^3.1",
    "hyperf/db-connection": "^3.1",
    "hyperf/di": "^3.1",
    "hyperf/framework": "^3.1",
    "hyperf/http-message": "^3.1",
    "hyperf/http-server": "^3.1",
    "hyperf/redis": "^3.1",
    "hyperf/session": "^3.1",
    "hyperf/utils": "^3.1",
    "hyperf/helper": "^3.1",
    "hyperf/validation": "^3.1",
    "hyperf/view": "^3.1",
    "hyperf/view-engine": "^3.1",
    "lcobucci/jwt": "^4.0",
    "league/oauth2-server": "^8.2",
    "league/plates": "^3.4",
    "nesbot/carbon": "^2.0",
    "nyholm/psr7": "^1.3",
    "phpseclib/phpseclib": "^2.0|^3.0",
    "ramsey/uuid": "^4.7",
    "richard8768/cookie": "^1.0",
    "richard8768/encryption": "^1.0",
    "richard8768/hashing": "^1.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "mockery/mockery": "^1.0",
    "phpstan/phpstan": "^0.12",
    "phpunit/phpunit": "^9.3",
    "swoole/ide-helper": "dev-master",
    "symfony/var-dumper": "^5.1"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "test": "co-phpunit --prepend tests/bootstrap.php -c phpunit.xml --colors=always",
    "analyse": "phpstan analyse --memory-limit 300M -l 0 ./src",
    "cs-fix": "php-cs-fixer fix $1"
  },
  "extra": {
    "hyperf": {
      "config": "Richard\\HyperfPassport\\ConfigProvider"
    }
  }
}
